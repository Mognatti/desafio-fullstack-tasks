generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())
  password  String
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  description   String?
  createdAt DateTime @default(now())
  userId    Int
  
  user      User     @relation(fields: [userId], references: [id])
}
